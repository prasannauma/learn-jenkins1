pipeline {
    agent any
    stages{
         stage ('declare a varible here') {
              steps {
                   script {
                       def a = "hello"
                       def b = "how r u"
                       print  "a = ${a}"
                  }
              }
         }
         stage (' accessing a variable') {
              steps {
                  script {
                       print "b = ${b}"
                  }
              }
         }
    }
 }




